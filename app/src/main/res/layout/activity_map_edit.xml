    <ddr.example.com.newretailandroidclient.widget.view.RockerView
        android:id="@+id/my_rocker"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:areaBackground="@mipmap/rocker_base_default"
        android:layout_alignParentBottom="true"
        app:rockerBackground="@mipmap/rocker"
        app:rockerCallBackMode="CALL_BACK_MODE_MOVE"
        app:rockerScale="0.3"
        app:rockerSpeedLevel="11"
        android:layout_marginLeft="57dp"
        android:visibility="gone"
        />
    <ddr.example.com.newretailandroidclient.widget.view.RockerView
        android:id="@+id/my_rocker_zy"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:areaBackground="@mipmap/rocker_default_zy"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:rockerBackground="@mipmap/rocker"
        app:rockerCallBackMode="CALL_BACK_MODE_MOVE"
        app:rockerScale="0.3"
        app:rockerSpeedLevel="11"
        android:layout_marginRight="50dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/iv_add_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/add_path_point"
        android:layout_alignParentRight="true"
        android:layout_marginRight="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:text="添加点"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:gravity="center_horizontal"
        android:paddingTop="39.5dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/delete_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/delete_point"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="22dp"
        android:text="删除点"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:gravity="center_horizontal"
        android:paddingTop="39.5dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/save_path"
        android:background="@mipmap/finish_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="168dp"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:gravity="center_horizontal"
        android:paddingTop="39.5dp"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/bt_delete_wall"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="删除"
        android:textStyle="bold"
        android:textSize="12dp"
        android:background="@drawable/bt_delete_wall_bg"
        android:textColor="@color/white"
        android:layout_below="@id/second_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="748dp"
    android:layout_height="110dp"
    android:background="#101112"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <TextView
        android:layout_width="748dp"
        android:layout_height="1dp"
        android:background="#262728"
        android:layout_marginLeft="2dp"
        android:id="@+id/tv_firstBack"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_alignTop="@id/tv_firstBack"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="2dp"
        android:gravity="center"
        android:id="@+id/tv_naparam_txt"
        />
    <EditText
        android:layout_width="62dp"
        android:layout_height="34dp"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:layout_alignTop="@id/tv_firstBack"
        android:layout_marginTop="23.5dp"
        android:layout_marginLeft="614dp"
        android:id="@+id/ed_bzRadius"
        android:digits="1234567890"
        android:maxLength="3"
        android:gravity="center"
        android:inputType="numberSigned|numberDecimal|text"
        android:imeOptions="actionDone"
        android:background="@drawable/bg_task_cz"/>
    <ddr.example.com.newretailandroidclient.other.SlideButton
        android:layout_width="55dp"
        android:layout_height="33dp"
        android:layout_marginTop="23.5dp"
        android:layout_marginLeft="614dp"
        android:id="@+id/slide_is"
        android:visibility="gone"/>
    <TextView
        android:layout_width="19dp"
        android:layout_height="24dp"
        android:text="cm"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_alignTop="@id/tv_firstBack"
        android:layout_marginLeft="682dp"
        android:layout_marginTop="29.5dp"
        android:gravity="center"
        android:id="@+id/tv_cm"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textSize="12sp"
        android:textColor="#99ffffff"
        android:layout_marginLeft="2dp"
        android:layout_below="@id/tv_naparam_txt"
        android:layout_marginTop="14dp"
        android:id="@+id/tv_naparam_titer"
        android:gravity="center"/>

</RelativeLayout>
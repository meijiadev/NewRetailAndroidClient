<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="753dp"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="12dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:text="ID"
            android:gravity="center"
            android:id="@+id/tv_error_id"
            />
        <TextView
            android:layout_width="134dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:text="报错时间"
            android:layout_marginLeft="36dp"
            android:layout_toRightOf="@id/tv_error_id"
            android:gravity="center"
            android:id="@+id/tv_error_time"
            />
        <TextView
            android:layout_width="134dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:text="错误类型"
            android:layout_marginLeft="36dp"
            android:gravity="center"
            android:layout_toRightOf="@id/tv_error_time"
            android:id="@+id/tv_error_type"
            />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="754dp"
        android:layout_height="353dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="72dp"
        android:id="@+id/recycle_sell_error"
        />

    <RelativeLayout
        android:layout_width="570dp"
        android:layout_height="31dp"
        android:layout_below="@id/recycle_sell_error"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="112dp"
        >
        <ddr.example.com.newretailandroidclient.other.MaxWidthRecycle
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:id="@+id/recycle_pages_y_error"
            app:maxWidth="465dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/xlright_5"
            android:layout_toLeftOf="@+id/recycle_pages_y_error"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_task_cz"
            android:id="@+id/iv_trigger_y"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/xlright_5"
            android:layout_toRightOf="@+id/recycle_pages_y_error"
            android:layout_marginLeft="24dp"
            android:background="@drawable/bg_task_cz"
            android:id="@+id/iv_add_y"/>
    </RelativeLayout>
</RelativeLayout>
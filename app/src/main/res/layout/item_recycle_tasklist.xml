<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <ddr.example.com.newretailandroidclient.widget.textview.GridImageView
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="10dp"
        android:id="@+id/iv_check"
        />
    <TextView
        android:layout_width="122dp"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="85dp"
        android:id="@+id/tv_map_list"
        android:textSize="12sp"
        android:textColor="#eaf1f5"
        android:text="地图列表-1"
        android:gravity="center"
        />
<!--    android:layout_toRightOf="@+id/iv_check"-->

    <TextView
        android:layout_width="175dp"
        android:layout_height="34dp"
        android:background="#161718"
        android:layout_toRightOf="@+id/tv_map_list"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_task_time"
        android:layout_marginLeft="29dp"
        android:paddingLeft="18dp"
        android:paddingTop="7dp"
        android:textColor="#eaf1f5"
        />
    <ImageView
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@mipmap/set_task_time"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="378dp"/>
    <TextView
        android:layout_width="1.5dp"
        android:layout_height="16dp"
        android:layout_toRightOf="@+id/tv_map_list"
        android:background="#4d575c"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="20dp"
        />
<!--    <ddr.example.com.nddrandroidclient.widget.view.NumEdit-->
<!--        android:layout_width="106dp"-->
<!--        android:layout_height="34dp"-->
<!--        android:layout_toRightOf="@id/tv_task_time"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:layout_marginLeft="60dp"-->
<!--        android:id="@+id/task_num_check"-->
<!--        android:gravity="center"-->
<!--        />-->
    <ddr.example.com.newretailandroidclient.widget.edit.DDREditText
        android:layout_width="106dp"
        android:layout_height="34dp"
        android:layout_toRightOf="@id/tv_task_time"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="63dp"
        android:id="@+id/task_num_check"
        android:gravity="center"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/task_num_check"
        android:layout_marginLeft="55dp"
        android:gravity="center"
        android:text="待命中"
        android:id="@+id/tv_task_status"
        android:textColor="#eaf1f5"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="34dp"
        android:text="暂停"
        android:textColor="#99ffffff"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_toRightOf="@id/tv_task_status"
        android:layout_marginLeft="55.5dp"
        android:id="@+id/tv_task_pause"
        android:background="@drawable/bg_task_cz"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="34dp"
        android:text="终止"
        android:textColor="#99ffffff"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:layout_toRightOf="@id/tv_task_pause"
        android:layout_marginLeft="12dp"
        android:gravity="center"
        android:id="@+id/tv_task_stop"
        android:background="@drawable/bg_task_cz"
        />


</RelativeLayout>
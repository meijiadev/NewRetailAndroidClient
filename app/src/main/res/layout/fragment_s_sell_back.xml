<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="753dp"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="12dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:text="ID"
            android:gravity="center"
            android:id="@+id/tv_back_id"
            />
        <TextView
            android:layout_width="160dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:text="退款时间"
            android:layout_marginLeft="26dp"
            android:layout_toRightOf="@id/tv_back_id"
            android:gravity="center"
            android:id="@+id/tv_back_time"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:text="支付方式"
            android:layout_marginLeft="37.5dp"
            android:gravity="center"
            android:layout_toRightOf="@id/tv_back_time"
            android:id="@+id/tv_back_pay_f"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:text="退款方式"
            android:layout_marginLeft="24dp"
            android:gravity="center"
            android:layout_toRightOf="@id/tv_back_pay_f"
            android:id="@+id/tv_back_back_f"
            />
        <TextView
            android:layout_width="97.5dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:text="结算编号"
            android:layout_marginLeft="24dp"
            android:gravity="center"
            android:layout_toRightOf="@id/tv_back_back_f"
            android:id="@+id/tv_back_pay_num"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:text="退款结果"
            android:layout_marginLeft="24dp"
            android:gravity="center"
            android:layout_toRightOf="@id/tv_back_pay_num"
            android:id="@+id/tv_back_result"
            />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="754dp"
        android:layout_height="353dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="72dp"
        android:id="@+id/recycle_sell_back"
        />

    <RelativeLayout
        android:layout_width="570dp"
        android:layout_height="31dp"
        android:layout_below="@id/recycle_sell_back"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="112dp"
        >
        <ddr.example.com.newretailandroidclient.other.MaxWidthRecycle
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:id="@+id/recycle_pages_y_back"
            app:maxWidth="465dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/iv_page_left"
            android:layout_toLeftOf="@+id/recycle_pages_y_back"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_task_cz"
            android:id="@+id/iv_trigger_y"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/iv_page_right"
            android:layout_toRightOf="@+id/recycle_pages_y_back"
            android:layout_marginLeft="24dp"
            android:background="@drawable/bg_task_cz"
            android:id="@+id/iv_add_y"/>
    </RelativeLayout>

</RelativeLayout>
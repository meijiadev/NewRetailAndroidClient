<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="753dp"
    android:layout_marginTop="8dp"
    android:layout_height="36dp"
    android:background="#161718">
        <TextView
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:id="@+id/tv_id_item"
            />
        <TextView
            android:layout_width="97.5dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_toRightOf="@id/tv_id_item"
            android:layout_marginLeft="18dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:id="@+id/tv_commodity_name_item"
            />
        <TextView
            android:layout_width="97.5dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_toRightOf="@id/tv_commodity_name_item"
            android:layout_marginLeft="18dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:id="@+id/tv_Settlement_item"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_toRightOf="@id/tv_Settlement_item"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/tv_b_number_item"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_toRightOf="@id/tv_b_number_item"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_Price_item"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_toRightOf="@id/tv_Price_item"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_number_item"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_toRightOf="@id/tv_number_item"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_Total_item"
            />

</RelativeLayout>
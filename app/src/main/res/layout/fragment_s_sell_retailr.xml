<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="753dp"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="12dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="ID"
            android:id="@+id/tv_id"
            />
        <TextView
            android:layout_width="97.5dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_toRightOf="@id/tv_id"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"
            android:text="商品名称"
            android:id="@+id/tv_commodity_name"
            />
        <TextView
            android:layout_width="97.5dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_toRightOf="@id/tv_commodity_name"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"
            android:text="结算方式"
            android:id="@+id/tv_Settlement"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_toRightOf="@id/tv_Settlement"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"
            android:text="结算编号"
            android:id="@+id/tv_b_number"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_toRightOf="@id/tv_b_number"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"
            android:text="单价"
            android:id="@+id/tv_Price"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_toRightOf="@id/tv_Price"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"
            android:text="数量"
            android:id="@+id/tv_number"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_toRightOf="@id/tv_number"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"
            android:text="总价"
            android:id="@+id/tv_Total"
            />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="754dp"
        android:layout_height="353dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="72dp"
        android:id="@+id/recycle_sell_retail"
        />

    <RelativeLayout
        android:layout_width="570dp"
        android:layout_height="31dp"
        android:layout_below="@id/recycle_sell_retail"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="112dp"
        >
        <ddr.example.com.newretailandroidclient.other.MaxWidthRecycle
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:id="@+id/recycle_pages_y"
            app:maxWidth="465dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/iv_page_left"
            android:layout_toLeftOf="@+id/recycle_pages_y"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_task_cz"
            android:id="@+id/iv_trigger_y"
           />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/iv_page_right"
            android:layout_toRightOf="@+id/recycle_pages_y"
            android:layout_marginLeft="24dp"
            android:background="@drawable/bg_task_cz"
            android:id="@+id/iv_add_y"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:text="导出列表"
        android:gravity="center"
        android:layout_below="@id/recycle_sell_retail"
        android:layout_marginTop="26.5dp"
        android:layout_marginLeft="705dp"
        android:background="@drawable/bg_task_cz"
        android:id="@+id/tv_d_excel"
        />

</RelativeLayout>
